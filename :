#include <iostream>
#include <vector>

using namespace std;

int main() {
  int N, L;
  cin >> N >> L;

  // i 段目までの登り方の場合の数
  vector<long long> dp(N + 1, 0);

  for (int i = 0; i < L; i++) {
    dp[i] = 1;
  }

  for (int i = 1; i <= N; i++) {
    if (i - L >= 0) {
      dp[i] = max(dp[i], dp[i - L] + 1);
    }
    if (i - 1 >= 1) {
      dp[i] = max(dp[i], dp[i - 1] + 1);
    }
  }

  cout << dp[N] << endl;
}
